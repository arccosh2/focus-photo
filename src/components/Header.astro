---
import logoLight from "../assets/common/logo-light.svg";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <nav>
    <div class="nav-contents">
      <img class="logo" src={logoLight.src} />

      <ThemeIcon />
    </div>
  </nav>
</header>

<style>
  .nav-contents {
    display: flex;
    justify-content: center;
    align-items: baseline;
  }

  .logo {
    margin: 16px 80px 16px 120px;
    width: 120px;
    height: 137px;
  }

  @media (min-width: 960px) and (max-width: 1280px) {
    .logo {
      width: 88px;
      height: 100px;
    }
  }

  @media (max-width: 960px) {
    .logo {
      margin-right: 90px;
      width: 56px;
      height: 64px;
    }
  }
</style>
