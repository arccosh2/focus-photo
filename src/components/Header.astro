---
import logoLight from "../assets/common/logo-light.svg";
import logoDark from "../assets/common/logo-dark.svg";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <nav>
    <div class="nav-contents">
      <a href="/">
        <img class="logo-light" src={logoLight.src} alt="light mode logo" />
        <img class="logo-dark" src={logoDark.src} alt="dark mode logo" />
      </a>
      <ThemeIcon />
    </div>
  </nav>
</header>

<style>
  .nav-contents {
    display: flex;
    justify-content: center;
    align-items: baseline;
  }

  .logo-light {
    margin: 24px 80px 16px 120px;
    width: 120px;
    height: 137px;
  }

  .logo-dark {
    margin: 24px 80px 16px 120px;
    width: 120px;
    height: 137px;
    display: none;
  }

  :global(.dark) .logo-light {
    display: none;
  }
  :global(.dark) .logo-dark {
    display: inline;
  }

  @media (min-width: 960px) and (max-width: 1280px) {
    .logo {
      width: 88px;
      height: 100px;
    }
  }

  @media (max-width: 960px) {
    .logo {
      margin-right: 90px;
      width: 56px;
      height: 64px;
    }
  }
</style>
