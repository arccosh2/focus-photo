---
import logoLight from "../assets/common/logo-light.svg";
import logoDark from "../assets/common/logo-dark.svg";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <nav>
    <div class="nav-contents">
      <a href="/">
        <img class="logo-light" src={logoLight.src} alt="light mode logo" />
        <img class="logo-dark" src={logoDark.src} alt="dark mode logo" />
      </a>
      <div class="nav-links">
        <a href="/about" class="link">ABOUT</a>
        <a href="/works" class="link">WORKS</a>
        <ThemeIcon />
      </div>
    </div>
  </nav>
</header>

<style>
  .nav-contents {
    display: flex;
    justify-content: space-around;
    align-items: center;
  }

  .nav-links {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 16px;
    font-weight: bold;
  }

  .link {
    color: #3c3c3c;
    padding-right: 28px;
  }

  :global(.dark) .link {
    color: #cccccc;
  }

  .logo-light {
    margin-top: 12px;
    width: 72px;
    height: 83px;
  }

  .logo-dark {
    margin-top: 12px;
    width: 72px;
    height: 83px;
    display: none;
  }

  :global(.dark) .logo-light {
    display: none;
  }
  :global(.dark) .logo-dark {
    display: inline;
  }

  @media (min-width: 960px) and (max-width: 1280px) {
    .logo-light {
      margin-top: 16px;
      width: 64px;
      height: 74px;
    }

    .logo-dark {
      margin-top: 16px;
      width: 64px;
      height: 74px;
    }
  }

  @media (max-width: 960px) {
    .logo-light {
      margin-top: 18px;
      width: 40px;
      height: 46px;
    }

    .logo-dark {
      margin-top: 18px;
      width: 40px;
      height: 46px;
    }
  }
</style>
