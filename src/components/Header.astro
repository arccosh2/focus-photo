---
import logoLight from "../assets/common/logo-light.svg";
import logoDark from "../assets/common/logo-dark.svg";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <nav>
    <div class="nav-contents">
      <a href="/">
        <img class="logo-light" src={logoLight.src} alt="light mode logo" />
        <img class="logo-dark" src={logoDark.src} alt="dark mode logo" />
      </a>
      <ThemeIcon />
    </div>
  </nav>
</header>

<style>
  .nav-contents {
    display: flex;
    justify-content: center;
    align-items: baseline;
  }

  .logo-light {
    margin: 24px 108px 0 140px;
    width: 80px;
    height: 92px;
  }

  .logo-dark {
    margin: 24px 108px 0 140px;
    width: 80px;
    height: 92px;
    display: none;
  }

  :global(.dark) .logo-light {
    display: none;
  }
  :global(.dark) .logo-dark {
    display: inline;
  }

  @media (min-width: 960px) and (max-width: 1280px) {
    .logo-light {
      margin: 16px 96px 0 120px;
      width: 64px;
      height: 74px;
    }

    .logo-dark {
      margin: 16px 96px 0 120px;
      width: 64px;
      height: 74px;
    }
  }

  @media (max-width: 960px) {
    .logo-light {
      margin: 18px 56px 0 72px;
      width: 40px;
      height: 46px;
    }

    .logo-dark {
      margin: 18px 56px 0 72px;
      width: 40px;
      height: 46px;
    }
  }
</style>
