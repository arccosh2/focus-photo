---
import Carousel from "src/components/Carousel.astro";
import BaseLayout from "src/layouts/BaseLayout.astro";
import { REPRESENTATIVE_IMAGES } from "src/utils/constants";
import { css } from "styled-system/css";

const pageTitle = "Index Page";
---

<BaseLayout pageTitle={pageTitle}>
  <div
    class={css({
      display: "flex",
      width: "100%",
      height: {
        base: "100svh",
        lg: "600px",
        "2xl": "640px",
        "3xl": "720px",
      },
      alignItems: { base: "base-line", xl: "center" },
      justifyContent: "center",
    })}
  >
    <div
      class={css({
        mt: "40px",
        hideFrom: "xl",
      })}
    >
      <Carousel />
    </div>

    <div
      class={css({
        display: "grid",
        width: { base: "1100px", "3xl": "1300px" },
        mt: "32px",
        hideBelow: "xl",
        gridAutoFlow: "dense",
        gridTemplateRows: "240px 160px 140px auto",
        gridTemplateColumns: "repeat(3, 1fr)",
        gap: "1rem",
      })}
    >
      {
        REPRESENTATIVE_IMAGES.map((image) => (
          <img
            class={css({
              width: "100%",
              height: "100%",
              objectFit: "cover",
              borderRadius: "8px",
            })}
            src={image.img.src}
            alt={image.alt}
          />
        ))
      }
    </div>
  </div>
</BaseLayout>

<style>
  @media screen and (min-width: 1024px) {
    img:first-child {
      grid-column: 1/2;
      grid-row: 1/3;
    }
    img:nth-child(2) {
      grid-column: 2/3;
      grid-row: 1/2;
    }
    img:nth-child(3) {
      grid-column: 3/4;
      grid-row: 1/2;
    }
    img:nth-child(4) {
      grid-column: 1/2;
      grid-row: 3/4;
    }
    img:nth-child(5) {
      grid-column: 2/4;
      grid-row: 2/4;
    }
  }
</style>
